<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#009688"
        android:padding="30dp"
        android:layout_marginTop="1dp"> <!-- Menambahkan jarak di atas toolbar -->

        <!-- Menu icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_name"
            android:contentDescription="Menu Icon"
            app:tint="#FFFFFF" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ilmu Tajwid"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Grid icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_grid"
            android:contentDescription="Grid Icon"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- List of items -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:background="@drawable/item_background"
                android:padding="30dp"
                android:text="1. Hukum Nun Sukun dan Tanwin"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Item 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background"
                android:padding="30dp"
                android:text="2. Hukum Mim Sukun"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Item 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background"
                android:padding="30dp"
                android:text="3. Qolqolah"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Item 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background"
                android:padding="30dp"
                android:text="4. Hukum Mim Tasydi dan Nun Tasydid"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Item 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background"
                android:padding="30dp"
                android:text="5. Hukum Lam Ta'rif"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Item 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_background"
                android:padding="30dp"
                android:text="6. Macam-macam Idghom"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
